<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/app_base_margin"
    android:layout_marginBottom="@dimen/app_base_margin">

    <TextView
        android:id="@+id/device_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/device_name"
        style="@style/BLEListTextViewItemStyle"/>

    <TextView
        android:id="@+id/device_mac_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/device_mac_address"
        style="@style/BLEListTextViewItemStyle"/>

    <TextView
        android:id="@+id/device_rssi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/device_rssi"
        style="@style/BLEListTextViewItemStyle"/>

</LinearLayout>